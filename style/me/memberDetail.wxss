page {
  background-color: #f4f4f4;
}
view.lh-1 {
  line-height: 1;
}
.mt20 {
  margin-bottom: 20rpx;
}
.empty-area {
  text-align: center;
  padding-top: 156rpx;
  padding-bottom: 156rpx;
}
.empty-area .empty-img {
  text-align: center;
}
.empty-area .empty-img > image {
  width: 191rpx;
  height: 190rpx;
}
.empty-area .empty-txt {
  font-size: 30rpx;
  color: #999;
  padding-top: 40rpx;
}
.loading-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
  clear: both;
}
.nomore-img {
  width: 127rpx;
  height: 134rpx;
}
.black {
  color: #282828;
  font-size: 30rpx;
}
image.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.money {
  color: #ff4919;
  font-size: 30rpx;
}
.nickname {
  color: #ff4919;
  font-size: 32rpx;
  margin-right: 20rpx;
}
image.level-img {
  width: 29rpx;
  height: 26rpx;
}
.level-text {
  color: #ffc548;
  padding-top: 20rpx;
  font-size: 28rpx;
  position: relative;
  top: -6rpx;
}
button.send-letter {
  width: 111rpx;
  padding: 0;
  margin: 0;
  height: 46rpx;
  line-height: 46rpx;
  background-color: #ff4919;
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}
.items {
  background-color: #fff;
}
.item-cover {
  width: 188rpx;
  height: 188rpx;
}
.cover-wrap {
  padding: 30rpx;
}
.info-wrap {
  padding: 30rpx 30rpx 30rpx 0;
}
.item-title {
  font-size: 30rpx;
  color: #282828;
  line-height: 1.2em;
}
.item-status {
  height: 34rpx;
  font-size: 22rpx;
  color: #ff4919;
  padding: 0 7rpx;
  line-height: 34rpx;
  background-color: #ff4919;
  border-radius: 10px;
  border: solid 1px #ff4919;
}
.price-area {
  padding: 30rpx 0;
  align-items: flex-end;
}
.item-count {
  font-size: 28rpx;
  color: #999999;
}
.price-unit {
  color: #ff4919;
  font-size: 26rpx;
}
.price-num {
  font-size: 40rpx;
  color: #ff4919;
  margin-right: 20rpx;
}
.market-price {
  font-size: 28rpx;
  color: #999999;
  text-decoration: line-through;
}
.plist,
.flex-title {
  background-color: #fff;
}
.plist {
  padding: 15rpx 30rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #999999;
}
.flex-title {
  padding: 25rpx 30rpx;
}
.flex-label {
  font-size: 30rpx;
  color: #282828;
}
.flex-price {
  font-size: 34rpx;
  color: #ff4919;
}
.order-status {
  display: inline;
  color: #282828;
}
.user-intro {
  font-size: 28rpx;
  color: #999999;
}
