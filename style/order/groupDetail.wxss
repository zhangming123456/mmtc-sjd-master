page {
  background-color: #f4f4f4;
}
page view {
  line-height: 1;
}
image.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.nickname {
  color: #282828;
  font-size: 30rpx;
  margin-right: 20rpx;
}
image.level-img {
  width: 29rpx;
  height: 26rpx;
}
.level-text {
  color: #ffc548;
  padding-top: 20rpx;
  font-size: 28rpx;
  position: relative;
  top: -6rpx;
}
.role {
  font-size: 20rpx;
  height: 29rpx;
  line-height: 29rpx;
  border: solid 1px #ff4919;
  padding: 0 9rpx;
  color: #ff4919;
}
.pl20 {
  padding-left: 20rpx;
}
.fz26 {
  font-size: 26rpx;
}
button.send-letter {
  width: 111rpx;
  padding: 0;
  margin: 0;
  height: 46rpx;
  line-height: 46rpx;
  background-color: #ff4919;
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}
.items {
  background-color: #fff;
}
.item-cover {
  width: 188rpx;
  height: 188rpx;
}
.cover-wrap {
  padding: 30rpx;
}
.info-wrap {
  padding: 30rpx 30rpx 30rpx 0;
}
.item-title {
  font-size: 30rpx;
  color: #282828;
}
.item-status {
  height: 34rpx;
  font-size: 22rpx;
  color: #ff4919;
  padding: 0 7rpx;
  line-height: 34rpx;
  background-color: #ff4919;
  border-radius: 10px;
  border: solid 1px #ff4919;
}
.price-area {
  padding: 30rpx 0;
  align-items: flex-end;
}
.item-count {
  font-size: 28rpx;
  color: #999999;
}
.price-unit {
  color: #ff4919;
  font-size: 26rpx;
}
.price-num {
  font-size: 40rpx;
  color: #ff4919;
  margin-right: 20rpx;
}
.market-price {
  font-size: 28rpx;
  color: #999999;
  text-decoration: line-through;
}
.plist,
.flex-title {
  background-color: #fff;
}
.plist {
  padding: 15rpx 30rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #999999;
}
.flex-title {
  padding: 25rpx 30rpx;
}
.flex-label {
  font-size: 30rpx;
  color: #282828;
}
.flex-price {
  font-size: 34rpx;
  color: #ff4919;
}
.order-status {
  display: inline;
  color: #999999;
}
.user-intro {
  font-size: 28rpx;
  color: #999999;
}
.close-icon {
  width: 91rpx;
  height: 91rpx;
}
.header {
  padding: 40rpx 30rpx;
  background-color: #3d70f7;
  color: #ffffff;
}
.header-title {
  font-size: 32rpx;
}
.left-count {
  color: #ff4919;
  padding: 0 6rpx;
}
.expire-time {
  font-size: 28rpx;
  padding-top: 20rpx;
}
.order-status {
  color: #282828;
}
.caption-title {
  font-size: 28rpx;
  color: #999999;
  padding: 24rpx 30rpx;
}
.member-avatar {
  width: 92rpx;
  border-radius: 50%;
  height: 92rpx;
  border: 1px solid #ff4919;
}
.member {
  background-color: #fff;
  margin-top: 24rpx;
}
.member:first-child {
  margin-top: 0;
}
.state {
  margin-bottom: 20rpx;
}
.state2 {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
