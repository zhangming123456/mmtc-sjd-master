.azm-telephone-box,
.azm-code {
  height: 90rpx;
  line-height: 90rpx;
  border: 1px solid #e9eaec;
  border-radius: 5rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.azm-telephone-box input,
.azm-code input {
  width: 100%;
  height: 90rpx;
}
.azm-telephone-box {
  margin-top: 55rpx;
}
.azm-telephone-box .azm-telephone {
  flex: 2;
}
.azm-telephone-box .azm-clearTimer {
  padding-top: 15rpx;
  box-sizing: border-box;
}
.azm-code {
  margin-top: 30rpx;
}
.azm-clearTimer {
  text-align: center;
}
.azm-clearTimer button {
  height: 60rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  vertical-align: middle;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-radius: 10rpx;
}
.azm-clearTimer button[plain] {
  color: #ff4919;
  border: solid 1px #ff4919;
}
.azm-clearTimer button[disabled] {
  border-color: rgba(0, 0, 0, 0.3);
  color: #999;
}
button.azm-btn-submit {
  margin-top: 85rpx;
  height: 90rpx;
  line-height: 86rpx;
  border: none;
  background-image: linear-gradient(90deg, #35abfe 0, #3d70f7 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 5rpx;
}
