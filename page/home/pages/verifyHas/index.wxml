<view class="container1 text-center">
    <image class="ok-icon" src="../../../../image/suc.png"/>
    <view class="p0">订单已验证</view>
    <view class="p1">您已经验证过了，不用再验证啦~</view>
</view>
<view class="caption-title">相关订单</view>
<view class="item-box">
    <view class="item-box-title azm-1px-b">订单号：{{itemInfo.order_no}}</view>
    <view class="item-box-content">
        <view class="item-box-content-title">【{{itemInfo.category}}】{{itemInfo.title}}</view>
        <view class="item-box-row flex">
            <view class="flex-con">验证时间</view>
            <view>{{itemInfo.used_date_time}}</view>
        </view>
        <view class="item-box-row flex">
            <view class="flex-con">用户</view>
            <view>{{itemInfo.nickname}}</view>
        </view>
        <view class="item-box-row-last flex">
            <view class="flex-con">订单金额</view>
            <view class="price">￥
                <view class="ib">{{itemInfo.total}}</view>
            </view>
        </view>
    </view>
</view>